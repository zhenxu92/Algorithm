/**
 * This is the client side of the graph program
 * @author zhenxu
 *
 */
import java.util.*;
public class Client {
	public static void main(String args[]) {
		// make vertices
		List<Vertex> vertices = new ArrayList<Vertex>();
		List<Edge> edges = new ArrayList<Edge>();
		for(int i = 0; i < 7; i++) {
			Vertex v = new Vertex("Node" + i, "Node" + i);
			vertices.add(v);
		}
		Vertex a = new Vertex("Node1", "Node1");
		Vertex b = new Vertex("Node2", "Node2");
		Vertex c = new Vertex("Node3", "Node3");
		Vertex d = new Vertex("Node4", "Node4");
		Vertex e = new Vertex("Node5", "Node5");
		Vertex f = new Vertex("Node6", "Node6");
		Vertex g = new Vertex("Node7", "Node7");
		Vertex h = new Vertex("Node8", "Node8");
		Edge ac = new Edge(a, c, 5, "Edge1");
		Edge ad = new Edge(a, d, 4, "Edge2");
		Edge ae = new Edge(a, e, 6, "Edge3");
		Edge cf = new Edge(c, f, 6, "Edge4");
		Edge cg = new Edge(a, d, 7, "Edge5");
		Edge ch = new Edge(a, d, 5, "Edge6");
		Edge dg = new Edge(a, d, 9, "Edge7");
		Edge dh = new Edge(a, d, 8, "Edge8");
		Edge gb = new Edge(a, d, 4, "Edge9");
		Edge hb = new Edge(a, d, 10, "Edge10");
		edges.add(ac);
		edges.add(ad);
		edges.add(ae);
		edges.add(cf);
		edges.add(cg);
		edges.add(ch);
		edges.add(dg);
		edges.add(dh);
		edges.add(gb);
		edges.add(hb);
		Graph graph = new Graph(edges, vertices);
		ShortestPath sp = new ShortestPath(graph);
		sp.execute(vertices.get(0));
		LinkedList<Vertex> path = sp.getPath(vertices.get(1));

        for (Vertex vertex : path) {
            System.out.println(vertex);
        }
		
		
	}
}
